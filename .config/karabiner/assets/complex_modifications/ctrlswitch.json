{
    "title": "caps2ctrl0rCMD",
    "rules": [
        {
            "description": "switch caps to ctrl(or cmd)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {"optional": ["any"]}
                    },
                    "to": {
                        "key_code": "left_control"
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$",
                                "^co\\.zeit\\.hyper$",
                                "^org\\.terminus$"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {"optional": ["any"]}
                    },
                    "to": {
                        "key_code": "left_gui"
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$",
                                "^co\\.zeit\\.hyper$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
