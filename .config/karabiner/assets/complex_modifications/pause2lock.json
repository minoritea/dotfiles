{
    "title": "pause2lock",
    "rules": [
        {
            "description": "screen lock when pause key is pushed",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "pause"
                    },
                    "to": {
                        "key_code": "q",
                        "modifiers": ["left_gui", "left_control"]
                    }
                }
            ]
        }
    ]
}