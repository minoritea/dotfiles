{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "javascript",
    "typescript",
    "ruby",
    "css",
    "markdown"
  ],
  "solargraph.useBundler": false,
  "svelte.enable-ts-plugin": true,
  "languageserver": {
    "ocaml": {
      "command": "opam",
      "args": [
        "config",
        "exec",
        "--",
        "ocamllsp"
      ],
      "filetypes": ["ocaml"],
    }
  }
}
